<div class='ui two column grid'>
  <div class='ui inbox column'>
    <% __this.CascadeRequest('inbox'); %>
  </div>
  <div class='ui thread column'>
  </div>
</div>

<%
__this.Defer(function()
{
  __this
    .first()
    .find('.inbox.column')
    .get(0)
    .addEventListener('click', RedirectToRightPanel, true);
});

function RedirectToRightPanel(e)
{
  var thread = phoxy.DeferRender($(e.target).attr('href'));

  __this.first().find('.thread.column').html(thread);

  e.preventDefault();
  e.stopPropagation();
  return false;
}
%>
